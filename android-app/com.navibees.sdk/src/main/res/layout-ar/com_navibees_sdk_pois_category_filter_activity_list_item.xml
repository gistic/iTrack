<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!--  ListRow Left side POI Category Thumbnail image -->
    <LinearLayout android:id="@+id/category_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/com_navibees_sdk_image_bg"
        android:layout_marginLeft="5dip">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/poi_category_image"
            android:layout_width="23dip"
            android:layout_height="23dip"
            fresco:placeholderImage ="@drawable/com_navibees_sdk_default_category_placeholder"
            fresco:failureImage="@drawable/com_navibees_sdk_default_category"/>

    </LinearLayout>

    <!-- Title Of Category-->
    <TextView
        android:id="@+id/poi_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/category_thumbnail"
        android:text="@string/hello_world"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15sp"
        android:textStyle="bold"/>


    <Switch
        android:id="@+id/toggleButton"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff=""
        android:textOn=""
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>


</RelativeLayout>