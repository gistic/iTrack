<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf6ef"
    tools:context="com.navibees.sdk.activity.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/spaceInCenter"
        android:gravity="center|bottom"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/navibees"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scaleType="center"
            android:src="@drawable/com_navibees_sdk_splash"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#9F9D98"
            android:fontFamily="helvetica regular"
            android:text="@string/copyright"
            android:gravity="center"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/spaceInCenter"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#faf6ef"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/spaceInCenter"
        android:layout_above="@+id/logos"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#9F9D98"
            android:fontFamily="helvetica regular"
            android:text="@string/powered_by"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/esri"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scaleType="center"
            android:src="@drawable/com_navibees_sdk_esri"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/logos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#f3f0ec"
        >


        <ImageView
            android:id="@+id/mtvc"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/com_navibees_sdk_makkah"
            />

        <ImageView
            android:id="@+id/gistic"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/com_navibees_sdk_gistic"
            />

    </LinearLayout>
</RelativeLayout>
