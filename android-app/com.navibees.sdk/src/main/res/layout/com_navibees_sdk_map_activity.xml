<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_uqu_navibees_sdk_map_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="1dp">


    <com.esri.android.map.MapView
        android:id="@+id/com_uqu_navibees_sdk_map_activity_mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_green_light"
        android:layoutDirection="ltr"></com.esri.android.map.MapView>

    <FrameLayout
        android:id="@+id/com_uqu_navibees_sdk_map_activity_mapOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:visibility="visible">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/com_uqu_navibees_sdk_map_activity_actionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/com_uqu_navibees_sdk_map_activity_numberOfBeacons"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/com_navibees_sdk_rounded_corners_bg"
            android:gravity="center"
            android:text="0"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/com_uqu_navibees_sdk_map_activity_myLocation"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/com_navibees_sdk_rounded_corners_bg"
            android:scaleType="center"
            android:src="@drawable/com_navibees_sdk_current_location_off" />

        <ImageView
            android:id="@+id/com_uqu_navibees_sdk_map_activity_direction"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/com_navibees_sdk_rounded_corners_bg"
            android:scaleType="center"
            android:src="@drawable/com_navibees_sdk_direction_btn" />

    </LinearLayout>


    <TextView
        android:id="@+id/com_navibees_sdk_navigation_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#668D8D8D"
        android:minHeight="50dp"
        android:textColor="#ff1616ff"
        android:textSize="18sp"
        android:typeface="sans"
        android:gravity="center"
        android:visibility="invisible"
        android:padding="5dp"
        />


</RelativeLayout>

